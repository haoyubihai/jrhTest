<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="cn.jrhlive.nestscrolling.NestScrollActivity">

    <cn.jrhlive.nestscrolling.NestedScrollParentLayout
        android:id="@+id/nest_parent"
        android:background="#99099999"
        android:layout_width="200dp"
        android:layout_height="300dp">
        <cn.jrhlive.nestscrolling.NestedScrollChildView
            android:id="@+id/nest_child"
            android:background="#88ff0000"
            android:layout_width="80dp"
            android:layout_height="100dp"/>

    </cn.jrhlive.nestscrolling.NestedScrollParentLayout>


</LinearLayout>
