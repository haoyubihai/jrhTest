<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.jrhlive.activity.CutActivity">

    <cn.jrhlive.meishe.ui.widget.NoFlingScrollView
        android:id="@+id/hzscrollview"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scrollbars="none"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:background="#cecece"
            android:id="@+id/framelayout_in_sc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </cn.jrhlive.meishe.ui.widget.NoFlingScrollView>
    <FrameLayout
        android:id="@+id/frame_container"
        android:background="#ccccc0"
        app:layout_constraintTop_toBottomOf="@+id/hzscrollview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="563dp"
        >

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
