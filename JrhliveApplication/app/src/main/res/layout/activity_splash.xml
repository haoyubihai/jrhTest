<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="cn.jrhlive.splash.SplashActivity">
    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/pvView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        pv:pv_background_color="@color/colorPrimaryDark"
        pv:pv_text_anim_time="1000"
        pv:pv_spread_anim_time="1000"
        pv:pv_host_text_anim_time="1000"
        pv:pv_host_text="@string/app_name"
        pv:pv_particle_text="1.0"
        pv:pv_particle_text_size="25sp"
        pv:pv_text_color="#FFF" />
</RelativeLayout>
