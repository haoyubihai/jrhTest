<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="cn.jrhlive.richeditor.ui.RichEditorActivity"
    android:id="@+id/content_main">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="hello"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
     />

    <cn.jrhlive.richeditor.widgets.RichEditorView
        android:id="@+id/rich_editor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#cecece"
        app:layout_constraintBottom_toTopOf="@+id/more_lay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

    </cn.jrhlive.richeditor.widgets.RichEditorView>

    <HorizontalScrollView
        android:id="@+id/more_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#e2d0cfd1"
        android:scrollbars="none"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom_lay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="保存"/>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="查找"/>

            <TextView
                android:id="@+id/tv_replace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="替换"/>

            <TextView
                android:id="@+id/tv_recover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="恢复"/>

            <ImageView
                android:id="@+id/iv_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:padding="10dp"
                android:src="@drawable/legacy_dashicon_admin_links_grey"/>

            <ImageView
                android:id="@+id/iv_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:padding="10dp"
                android:src="@drawable/legacy_dashicon_editor_bold_grey"/>

            <ImageView
                android:id="@+id/iv_insertmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:padding="10dp"
                android:src="@drawable/legacy_dashicon_editor_insertmore_grey"/>

            <ImageView
                android:id="@+id/iv_italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:padding="10dp"
                android:src="@drawable/legacy_dashicon_editor_italic_grey"/>

            <ImageView
                android:id="@+id/iv_strike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:padding="10dp"
                android:src="@drawable/legacy_dashicon_editor_strikethrough_grey"/>

            <ImageView
                android:id="@+id/iv_underline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:padding="10dp"
                android:src="@drawable/legacy_dashicon_editor_underline_grey"/>

            <ImageView
                android:id="@+id/iv_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:padding="10dp"
                android:src="@drawable/legacy_dashicon_format_quote_grey"/>

            <TextView
                android:id="@+id/tv_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="h1"/>

            <TextView
                android:id="@+id/tv_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="h2"/>

            <TextView
                android:id="@+id/tv_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="h3"/>

            <TextView
                android:id="@+id/tv_h4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="h4"/>

            <TextView
                android:id="@+id/tv_h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="h5"/>

            <TextView
                android:id="@+id/tv_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="字体色"/>

            <TextView
                android:id="@+id/tv_font_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="背景色"/>

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="左对齐"/>

            <TextView
                android:id="@+id/tv_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="居中"/>

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="右对齐"/>

            <TextView
                android:id="@+id/tv_letter_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="字间距"/>

            <TextView
                android:id="@+id/tv_row_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="行间距"/>

            <TextView
                android:id="@+id/tv_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="下标"/>

            <TextView
                android:id="@+id/tv_sup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="上标"/>

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="有序"/>

            <TextView
                android:id="@+id/tv_un_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="无序"/>

            <TextView
                android:id="@+id/tv_p_w_retract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="段落整体缩进"/>

            <TextView
                android:id="@+id/tv_p_w_retract_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="段落整体缩进回退"/>

            <TextView
                android:id="@+id/tv_p_row_retract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="段落首行缩进"/>

            <TextView
                android:id="@+id/tv_p_space_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="段前间距"/>

            <TextView
                android:id="@+id/tv_p_space_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="段后间距"/>

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="插入视频"/>

            <TextView
                android:id="@+id/tv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="插入图片"/>

            <TextView
                android:id="@+id/tv_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="插入音频"/>
            <TextView
                android:id="@+id/tv_piZhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/richor_click_selector"
                android:gravity="center"
                android:padding="10dp"
                android:text="批注"/>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/bottom_lay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#cdcfc8"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/richor_click_selector"
            android:padding="5dp"
            android:src="@drawable/noticon_picture_grey"/>

        <ImageView
            android:id="@+id/iv_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/richor_click_selector"
            android:padding="10dp"
            android:src="@drawable/font"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/richor_click_selector"
            android:padding="5dp"
            android:src="@drawable/add"/>

        <ImageView
            android:id="@+id/iv_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/richor_click_selector"
            android:padding="5dp"
            android:src="@drawable/undo"/>

        <ImageView
            android:id="@+id/iv_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/richor_click_selector"
            android:padding="5dp"
            android:src="@drawable/redo"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
